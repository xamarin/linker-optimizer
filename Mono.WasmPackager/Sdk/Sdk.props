<?xml version="1.0" encoding="utf-8"?>  
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <MonoWebAssemblySdkVersion>0.2.3-martin-20200513.1</MonoWebAssemblySdkVersion>
    <DotNetRuntimeVersion>5.0.100-preview.5.20251.2</DotNetRuntimeVersion>

    <_LinkerOptimizer_Standalone>false</_LinkerOptimizer_Standalone>

    <!-- We cannot use $(NugetPackageRoot) prior to including Sdk.props -->
    <WasmPackager_NugetPackageRoot>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)\..\..\..'))</WasmPackager_NugetPackageRoot>

    <JsvuDir>$([System.IO.Path]::GetFullPath('$(HOME)/.jsvu'))</JsvuDir>

    <_WasmPackager_RepoRoot>$([System.IO.Path]::GetFullPath('$(MSBuildThisFileDirectory)\..\..\..\..\..\..'))</_WasmPackager_RepoRoot>

    <DotNetRuntimeRoot Condition="Exists('$(_WasmPackager_RepoRoot)/../runtime/docs/project/dotnet-standards.md')">$([System.IO.Path]::GetFullPath('$(_WasmPackager_RepoRoot)/../runtime'))</DotNetRuntimeRoot>
  </PropertyGroup>

  <Import Sdk="Mono.Linker.Optimizer" Version="1.0.0" Project="Sdk.props" Condition="'$(WasmPackager_EnableLinker)' == 'true'" />

  <!--
    We do not include Microsoft.NET.Sdk here; both it's Sdk.props and Sdk.targets are included
    from Mono.WasmPackager.Framework.targets because we want to be able to implicitly set
    WasmPackager_NetCore based on the project's TargetFramework.
    -->

</Project>
