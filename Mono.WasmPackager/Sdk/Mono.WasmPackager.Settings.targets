<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Default Settings and Configuration -->

  <!-- Packager defaults -->
  <PropertyGroup>
    <WasmPackager_RuntimeTemplate Condition="'$(WasmPackager_RuntimeTemplate)' == ''">runtime-tests.js</WasmPackager_RuntimeTemplate>
    <WasmPackager_EnableDebug Condition="'$(WasmPackager_EnableDebug)' == ''">false</WasmPackager_EnableDebug>
  </PropertyGroup>

  <!-- Packager settings -->
  <PropertyGroup>
    <WasmPackager_EnablePackager Condition="'$(WasmPackager_EnablePackager)' == ''">true</WasmPackager_EnablePackager>
    <WasmPackager_LinkIcalls Condition="'$(WasmPackager_LinkIcalls)' == ''">false</WasmPackager_LinkIcalls>
    <WasmPackager_EnableLinker Condition="'$(WasmPackager_EnableLinker)' == ''">true</WasmPackager_EnableLinker>
    <WasmPackager_CilStrip Condition="'$(WasmPackager_CilStrip)' == ''">true</WasmPackager_CilStrip>
    <WasmPackager_ExecMode Condition="'$(WasmPackager_ExecMode)' == ''">Aot</WasmPackager_ExecMode>
  </PropertyGroup>

  <!-- FIXME -->
  <ItemGroup>
    <!-- <WasmPackager_Profilers Include="TestProfiler" /> -->
    <WasmPackager_PInvokeLibraries Include="libfoo" />
  </ItemGroup>

  <!-- Packager settings -->
  <PropertyGroup>
    <WasmPackager_BuildDir>$([System.IO.Path]::GetFullPath('$(MSBuildProjectDirectory)/aot'))</WasmPackager_BuildDir>
    <WasmPackager_AppDir>$([System.IO.Path]::GetFullPath('$(MSBuildProjectDirectory)/app'))</WasmPackager_AppDir>
    <WasmPackager_VfsPrefix>managed</WasmPackager_VfsPrefix>
    <WasmPackager_DeployPrefix>managed</WasmPackager_DeployPrefix>
  </PropertyGroup>

</Project>
