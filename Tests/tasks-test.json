{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "package-optimizer",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.Linker.Optimizer",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-packager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-optimizer"
            ]
        },
        {
            "label": "package-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.Web",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "package-packager"
            ]
        },
        {
            "label": "package-test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.TestSuite",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-web"
            ]
        },
        {
            "label": "clean-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.Web",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-optimizer",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "/nologo",
                "@ROOT@/Mono.Linker.Optimizer",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-packager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "/nologo",
                "@ROOT@/Mono.WasmPackager",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean-test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.TestSuite",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "/nologo",
                "${workspaceFolder}/@PROJECT@.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary",
                "/verbosity:normal"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "/nologo",
                "${workspaceFolder}/@PROJECT@.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean-web",
                "clean-optimizer",
                "clean-packager",
                "clean-test"
            ]
        }
    ]
}