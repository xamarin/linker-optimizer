{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "@PROJECT@",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "@PACKAGES_DIR@/mono.wasmpackager.devserver/1.0.0/tools/Mono.WasmPackager.DevServer.dll",
            "args": [
                "--debug",
                "--web-root",
                "${workspaceFolder}/app"
            ],
            "cwd": "${workspaceFolder}/app",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "@PROJECT@ Optimizer",
            "type": "coreclr",
            "request": "launch",
            "program": "@ROOT@/Mono.Linker.Optimizer/bin/Debug/netcoreapp2.0/Mono.Linker.Optimizer.dll",
            "args": [
                "@aot/linker-in/linker-optimizer.response"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": true
        }
    ]
}