{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "package",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-optimizer",
                "package-packager",
                "package-web",
                "package-blazor",
                "package-test"
            ]
        },
        {
            "label": "build-test-samples",
            "dependsOrder": "sequence",
            "dependsOn": [
@BUILD_TEST_SAMPLES_DEPENDS_ON@
            ]
        },
        {
            "label": "build-tests",
            "dependsOrder": "sequence",
            "dependsOn": [
@BUILD_TESTS_DEPENDS_ON@
            ]
        },
        {
            "label": "package-optimizer",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.Linker.Optimizer",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-packager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.Web",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.Blazor",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.TestSuite",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
@ALL_PROJECTS@
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package",
                "build-test-samples",
                "build-tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
   ]
}