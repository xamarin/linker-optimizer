{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "package-optimizer",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.Linker.Optimizer",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "package-packager",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-optimizer"
            ]
        },
        {
            "label": "package-web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.Web",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "package-packager"
            ]
        },
        {
            "label": "package-blazor",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.Blazor",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": [
                "package-web"
            ]
        },
        {
            "label": "package-test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "pack",
                "/nologo",
                "@ROOT@/Mono.WasmPackager.TestSuite",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:Summary"
            ],
            "problemMatcher": "$msCompile",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-web"
            ]
        },
@ALL_PROJECTS@
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "package-optimizer",
                "package-packager",
                "package-blazor",
                "package-test",
@ALL_DEPENDENCIES@
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
   ]
}