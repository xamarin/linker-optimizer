@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        if (currentCount++ >= 3)
            throw new InvalidTimeZoneException($"I LIVE ON THE MOON!");
    }
}
