<Project Sdk="Mono.WasmPackager.Web/1.0.0">

  <PropertyGroup>
    <WasmPackager_ExecMode>Interp</WasmPackager_ExecMode>
    <WasmPackager_AddBinding>true</WasmPackager_AddBinding>
    <WasmPackager_EnableDebug>true</WasmPackager_EnableDebug>
    <WasmPackager_EnableTestSuite>true</WasmPackager_EnableTestSuite>
  </PropertyGroup>

  <ItemGroup>
    <WasmPackager_WebRoot_Files Include="setup.js;wwwroot/*;$(MSBuildProjectDirectory)/../../SharedTests/SharedSample/wwwroot/*">
      <Name>%(Filename)%(Extension)</Name>
      <Source>%(FullPath)</Source>
    </WasmPackager_WebRoot_Files>
    <Compile Include="$(MSBuildProjectDirectory)/../../SharedTests/SharedSample/*.cs" />
    <Compile Include="$(MSBuildProjectDirectory)/../../SharedTests/TestConstants.cs" />
  </ItemGroup>

</Project>
