<Project>
    <Target
        Name="Test_NuGet_ForceReinstall" BeforeTargets="Restore"
        Condition="'$(Test_NuGet_ForceReinstall)' == 'true' AND '$(Test_NuGet_GlobalsFolder)' != ''">
        <Message Importance="High" Text="Forcing reinstall - wiping $(Test_NuGet_GlobalsFolder)." />
        <RemoveDir Directories="$(Test_NuGet_GlobalsFolder)" />
    </Target>
</Project>
