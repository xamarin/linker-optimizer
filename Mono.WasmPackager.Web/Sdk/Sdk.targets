<?xml version="1.0" encoding="utf-8"?>  
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Keep this section prior to importing Mono.WasmPackager -->
  <PropertyGroup>
    <__WasmPackager_WebRoot_FileList>@(WasmPackager_WebRoot_Files)</__WasmPackager_WebRoot_FileList>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(__WasmPackager_WebRoot_FileList)' == ''">
      <ItemGroup>
        <_WasmPackager_AppBundle_Files Include="index.html">
          <Source>$(MSBuildProjectDirectory)/index.html</Source>
        </_WasmPackager_AppBundle_Files>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <_WasmPackager_AppBundle_Files Include="@(WasmPackager_WebRoot_Files)">
          <Source>%(Source)</Source>
          <AppPath>$(WasmPackager_AppDir)/%(Name)</AppPath>
        </_WasmPackager_AppBundle_Files>
      </ItemGroup>
    </Otherwise>
  </Choose>

  <Import Sdk="Mono.WasmPackager" Version="1.0.0" Project="Sdk.targets" />

  <Import Project="$(MSBuildThisFileDirectory)\Mono.WasmPackager.DevServer.targets" />

</Project>
